<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/nc_bg"
    android:orientation="vertical"
    tools:context="net.shopnc.shop.ui.mine.OrderDetailsActivity">

    <include layout="@layout/app_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/nc_title_bg"
                android:padding="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/mc_01_b" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="交易状态"
                        android:textColor="#7F7F7F"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/textstate_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/nc_title_bg"
                        android:text="交易状态"
                        android:textColor="#CC1212"
                        android:textSize="16dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:singleLine="true"
                    android:text="交易提示："
                    android:textColor="#7F7F7F"
                    android:textSize="14dp"
                    android:visibility="gone"
                     />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutWuLiu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/nc_title_bg"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="12dp"
                    android:src="@drawable/nc_icon_wuliu" />

                <TextView
                    android:id="@+id/textWuLiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:text="暂没有最新物流信息"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/nc_icon_arrow_right" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_title_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/nc_icon_location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="收货人："
                        android:textColor="#7F7F7F"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textreciver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="收货人姓名："
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textreciver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="收货人手机号："
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textreciver_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:singleLine="true"
                    android:text="收货地址："
                    android:textColor="#7F7F7F"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_title_bg"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/mcc_04" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="买家留言"
                        android:textColor="#7F7F7F"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textmessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="买家留言。。。"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_title_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/nc_icon_mine_money_3" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="发票信息"
                        android:textColor="#7F7F7F"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textinvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="类型：普通发票。。。。。。"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_title_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/nc_icon_mine_money_1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="付款方式"
                        android:textColor="#7F7F7F"
                        android:textSize="16dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textFuKuanStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:text="在线付款"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_title_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textOrderStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/nc_icon_store"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/nc_icon_arrow_right"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="店铺信息"
                    android:textColor="@color/nc_text_dark"
                    android:textSize="16dp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/cart_listview_gap" />

                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/addViewID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/cart_listview_gap" />


                <LinearLayout
                    android:id="@+id/layoutYouHui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="优惠"
                        android:textColor="#959595"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textpromotion"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="120"
                        android:singleLine="true"
                        android:textColor="#959595"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="运费"
                        android:textColor="#959595"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textshipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="120"
                        android:textColor="#959595"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="实付款(含运费)"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textorder_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="12000"
                        android:textColor="#CC1212"
                        android:textSize="14dp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@color/nc_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textChatMe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/nc_icon_kefu"
                        android:gravity="center_horizontal"
                        android:text="联系客服"
                        android:textSize="16dp" />

                    </LinearLayout>



                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/nc_bg"
                    android:layout_gravity="center_horizontal"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textCallMe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/nc_icon_phone"
                        android:gravity="center_horizontal"
                        android:text="拨打电话"
                        android:textSize="16dp" />

                    </LinearLayout>




            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/nc_title_bg"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textOrderSn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="订单编号："
                android:textColor="#7F7F7F"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textAddTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="创建时间："
                android:textColor="#7F7F7F"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textpayment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="付款时间："
                android:textColor="#7F7F7F"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textshipping_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="发货时间："
                android:textColor="#7F7F7F"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textfinnshed_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="完成时间："
                android:textColor="#7F7F7F"
                android:textSize="14dp"
                android:visibility="gone" />
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/textOrderOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_cancle"
                    android:padding="6dp"
                    android:text="取消订单"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/textOrderSure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_sure"
                    android:padding="6dp"
                    android:text="确认收货"
                    android:textColor="#CC1212"
                    android:textSize="14dp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
