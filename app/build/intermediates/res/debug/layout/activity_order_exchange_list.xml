<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="net.shopnc.shop.ui.mine.OrderExchangeListActivity">

    <!-- 头部 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_common_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@color/nc_white">

            <Button
                android:id="@+id/btnMoney"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/nc_combin_btn_left_bg"
                android:text="退款列表"
                android:textColor="@drawable/nc_btn_text_color" />

            <Button
                android:id="@+id/btnGoods"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/nc_combin_btn_right_bg"
                android:text="退货列表"
                android:textColor="@drawable/nc_btn_text_color" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/addOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    </ScrollView>

    <!-- 列表空背景 -->
    <include layout="@layout/app_list_empty" />

</LinearLayout>
