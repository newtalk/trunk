<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical"
    tools:context="net.shopnc.shop.ui.mine.MyAssetActivity">

    <include layout="@layout/app_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <!-- 账户余额 -->
        <RelativeLayout
            android:id="@+id/rlPredeposit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/nc_icon_mine_money_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="账号余额"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预存款账号余额、充值及提现明细"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPredepoit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:textColor="@color/nc_text_dark" />

        </RelativeLayout>

        <!-- 充值卡余额 -->
        <RelativeLayout
            android:id="@+id/rlRechargeCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/nc_icon_mine_money_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="充值卡余额"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值卡账户余额以及卡密充值操作"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAvailableRcBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:textColor="@color/nc_text_dark" />

        </RelativeLayout>

        <!-- 店铺代金券 -->
        <RelativeLayout
            android:id="@+id/rlVoucherList"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/nc_icon_mine_money_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="店铺代金券"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺代金券使用情况以及卡密兑换代金券操作"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:textColor="@color/nc_text_dark" />

        </RelativeLayout>

        <!-- 平台红包 -->
        <RelativeLayout
            android:id="@+id/rlRedpacketList"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/nc_icon_mine_money_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="平台红包"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台红包使用情况以及卡密领取红包操作"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRedpacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:textColor="@color/nc_text_dark" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPointLog"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/nc_icon_mine_money_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="会员积分"
                        android:textColor="@color/nc_text_dark"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员积分获取及消费日志"
                    android:textColor="@color/nc_text"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:textColor="@color/nc_text_dark" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
