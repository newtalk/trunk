<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <!--店铺图片轮播-->
    <net.shopnc.shop.custom.ViewFlipperScrollView
        android:id="@+id/viewFlipperScrollViewID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="4dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false" />

            <LinearLayout
                android:id="@+id/dian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" />
        </LinearLayout>
    </net.shopnc.shop.custom.ViewFlipperScrollView>

    <!--第一部分:店铺排行-->
    <LinearLayout
        android:id="@+id/llRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="店铺排行榜"
        android:background="@android:color/white"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_margin="12dp"/>

        <TextView style="@style/NCLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCollectOrder"
                    style="@style/NCTabButton"
                    android:text="收藏排行"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSaleOrder"
                    style="@style/NCTabButton"
                    android:text="销量排行"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView style="@style/NCLine"/>

        <!--排行商品展示-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp">
            
            <ImageView
                android:id="@+id/imgBig"
                android:layout_width="180dip"
                android:layout_height="180dip"
                android:layout_margin="15dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"/>

            <!--阴影区域显示-->
            <RelativeLayout
                android:id="@+id/ret1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="#77000000"
                android:visibility="gone"
                android:layout_alignBottom="@id/imgBig">

                <TextView
                    android:id="@+id/textSaleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text=""/>

                <TextView
                    android:id="@+id/textMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text=""/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgSmallOne"
                android:layout_width="100dip"
                android:layout_height="90dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"/>

            <!--阴影区域显示-->
            <RelativeLayout
                android:id="@+id/ret2"
                android:layout_width="100dip"
                android:layout_height="30dp"
                android:background="#77000000"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/imgSmallOne">

                <TextView
                    android:id="@+id/textSaleCountOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text=""/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgSmallTwo"
                android:layout_width="100dip"
                android:layout_height="90dip"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/imgBig"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/imgSmallOne"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/ret3"
                android:layout_width="100dip"
                android:layout_height="30dp"
                android:background="#77000000"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/imgSmallTwo">

                <TextView
                    android:id="@+id/textSaleCountTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text=""/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView style="@style/NCLine"/>
    <!--第二部分：店铺推荐-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店主推荐"
            android:background="@android:color/white"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_margin="12dp"/>

        <TextView style="@style/NCLine"/>

        <net.shopnc.shop.custom.MyGridView
            android:id="@+id/sotreGoodsGridViewID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dip"
            android:background="@null"
            android:horizontalSpacing="5dp"
            android:listSelector="@null"
            android:numColumns="2"
            android:focusable="false"
            android:verticalSpacing="5dp" />
     </LinearLayout>
</LinearLayout>
