<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="没有找到符合条件的商品"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/svGoodsGrid"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llGoodsGrid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="vertical">


            <net.shopnc.shop.custom.MyGridView
                android:id="@+id/gvGoodsGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nc_bg"
                android:divider="@null"
                android:fadingEdge="none"
                android:horizontalSpacing="5dp"
                android:listSelector="#00000000"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="5dp" />


            <TextView
                android:id="@+id/tvLoadMore"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="正在加载..."
                android:textColor="@color/nc_text"
                android:visibility="gone"
                android:textSize="14dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/C:/Users/Administrator/Desktop/trunk/app/src/main/res/layout/goods_fragment_grid.xml -->