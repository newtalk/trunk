<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_btn_normal"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dip"
            android:singleLine="true"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RelativeLayout>
    <!--  -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/fCodeLayoutID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="@drawable/list_item_w_bg"
                android:orientation="vertical"
                android:padding="5dip" >

                <EditText
                    android:id="@+id/editPhoneID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"
                    android:hint="请输入手机号"
                    android:padding="10dip"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_item_w_bg"
                android:orientation="vertical"
                android:padding="5dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:singleLine="true"
                    android:text="支付方式"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/ifshowOnpayID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/buy_step1_check_bg"
                        android:drawablePadding="5dip"
                        android:text="在线支付"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/ifshowOffpayID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/buy_step1_check_bg"
                        android:drawablePadding="5dip"
                        android:text="货到付款"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeCartListID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_item_w_bg"
                android:orientation="vertical"
                android:padding="5dip" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/storeNameID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/voucherPriceID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/detail_20_coupon"
                        android:text="￥ 20000"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dip"
                    android:background="@drawable/cart_listview_gap" />

                <LinearLayout
                    android:id="@+id/goodsListLayoutID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dip" >

                        <ImageView
                            android:id="@+id/goodsPicID"
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:layout_gravity="center"
                            android:paddingRight="5dip"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/goodsNameID"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="#劲霸男装皮带 男士全新牛头层革合金扣头皮腰带 正品"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dip"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/goodsPriceID"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="价格：￥0.00"
                                    android:textColor="#000000"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/goodsNumID"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="数量：1"
                                    android:textColor="#000000"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_item_w_bg"
                android:orientation="horizontal"
                android:padding="5dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:text="商品总价:"
                            android:textColor="#6D6D6D"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textViewGoodsTotal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=" ￥0.00 "
                            android:textColor="#DC0000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:text="运费:"
                            android:textColor="#6D6D6D"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textViewGoodsFreight "
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=" +￥0.00 "
                            android:textColor="#DC0000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:text="代金券:"
                            android:textColor="#6D6D6D"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textVoucher"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=" -￥0.00 "
                            android:textColor="#6890DF"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/coupon_vertical_bar" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:text="共需支付 "
                        android:textColor="#6D6D6D"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textviewAllPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:text="￥0.00 "
                        android:textColor="#DC0000"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/predepositLayoutID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/list_item_w_bg"
                android:orientation="vertical"
                android:padding="5dip"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/availablePredepositID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/buy_step1_check_bg"
                        android:drawablePadding="5dip"
                        android:text="预存款支付"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/availableRCBalanceID"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/buy_step1_check_bg"
                        android:drawablePadding="5dip"
                        android:text="充值卡支付"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editPasswordID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@drawable/edit_bg"
                    android:hint="请输入支付密码"
                    android:padding="10dip"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/commitID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/add_to_cat_button_bg"
                android:padding="10dip"
                android:text="提交订单"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>