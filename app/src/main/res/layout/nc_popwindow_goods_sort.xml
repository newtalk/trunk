<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnSortDefault"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:drawableRight="@drawable/nc_text_btn_check_mark"
            android:gravity="center_vertical"
            android:text="综合排序"
            android:textColor="@drawable/nc_text_btn_color"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnSortPriceDown"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:drawableRight="@drawable/nc_text_btn_check_mark"
            android:gravity="center_vertical"
            android:text="价格从高到低"
            android:textColor="@drawable/nc_text_btn_color"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnSortPriceUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:drawableRight="@drawable/nc_text_btn_check_mark"
            android:gravity="center_vertical"
            android:text="价格从低到高"
            android:textColor="@drawable/nc_text_btn_color"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnSortView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:drawableRight="@drawable/nc_text_btn_check_mark"
            android:gravity="center_vertical"
            android:text="人气排序"
            android:textColor="@drawable/nc_text_btn_color"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/nc_background_transport" />
</LinearLayout>
