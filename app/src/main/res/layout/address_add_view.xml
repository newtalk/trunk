<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <include layout="@layout/app_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="收  货  人：" />

            <EditText
                android:id="@+id/editAddressName"
                style="@style/NCFormEdit"
                android:hint="请输入收货人姓名" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="联系手机：" />

            <EditText
                android:id="@+id/editAddressMobPhone"
                style="@style/NCFormEdit"
                android:inputType="number"
                android:hint="请输入联系人手机号码" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="地区选择：" />

            <TextView
                android:id="@+id/editAddressInfo"
                style="@style/NCFormEdit"
                android:gravity="center_vertical"
                android:hint="请选择地区" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="详细地址：" />

            <EditText
                android:id="@+id/editJieDaoAddress"
                style="@style/NCFormEdit"
                android:hint="请输入详细地址" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="默认地址：" />

            <ImageButton
                android:id="@+id/btnDefaultAddress"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/nc_check" />

        </LinearLayout>

        <TextView style="@style/NCLine" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        style="@style/NCCornerButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="保存地址" />

</LinearLayout>