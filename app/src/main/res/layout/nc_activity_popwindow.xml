<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/flBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/nc_background_transport" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/nc_activity_explain"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动说明"
                android:layout_marginTop="10dp"
                android:textColor="@color/nc_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nc_text_dark"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text=""
                android:lineSpacingExtra="6dp"
                android:textSize="12sp" />

            <TextView
                style="@style/NCLine"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/nc_activity_explain"
                    android:text="确定"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/nc_text_blue" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
