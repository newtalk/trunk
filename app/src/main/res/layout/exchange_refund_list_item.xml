<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dip"
    android:background="#ffffff"
    android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textOrderStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nc_icon_store"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:padding="5dp"
                android:singleLine="true"
                android:text="店铺信息"
                android:textColor="@color/nc_text_dark"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textOrderSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功"
                android:textColor="#CC1212"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/cart_listview_gap" />

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- <net.shopnc2014.android.ui.custom.MyListView
                android:id="@+id/goodsListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null" /> -->

            <LinearLayout
                android:id="@+id/addViewID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/cart_listview_gap" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20151222 12:30:34"
                    android:textSize="12dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额："
                    android:textSize="14dp"
                    android:textColor="@color/nc_text_dark"
                    />

                <TextView
                    android:id="@+id/textExchangeAllPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥34.00"
                    android:textColor="#CC1212"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退货数量："
                    android:textSize="14dp"
                    android:textColor="@color/nc_text_dark"
                    />

                <TextView
                    android:id="@+id/textExchangeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#CC1212"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    />


            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/cart_listview_gap" />
        <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                   android:gravity="right"
             >

            <Button
                android:id="@+id/textExchangeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cancle"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:text="退款详情"
                android:textColor="#7F7F7F"
                android:textSize="14dp"
                android:gravity="right"
                />

            <Button
                android:id="@+id/textExchangeSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sure"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:text="退货发货"
                android:textColor="#CC1212"
                android:textSize="14dp"
                android:gravity="right"
                android:visibility="gone"
                />
</LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/cart_listview_gap" />

        </LinearLayout>

    </LinearLayout>

