<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_white"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAddressName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#6d6D6D"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textAddressPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#6d6D6D"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textAddressAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:textColor="#959595"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnDefaultAddress"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/nc_check" />

                <TextView
                    style="@style/NCText"
                    android:text="默认地址"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnEdit"
                    style="@style/NCTextButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/nc_icon_edit"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="编辑"
                    android:textColor="@color/nc_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/btnDel"
                    style="@style/NCTextButtonSmall"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/nc_icon_del"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="删除"
                    android:textColor="@color/nc_text"
                    android:textSize="14dp" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>