<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textOrderStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nc_icon_store"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/nc_icon_arrow_right"
                android:padding="5dp"
                android:singleLine="true"
                android:text="店铺信息"
                android:textColor="@color/nc_text_dark"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textOrderSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易成功"
                android:textColor="#CC1212"
                android:textSize="14dp"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/cart_listview_gap" />

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- <net.shopnc2014.android.ui.custom.MyListView
                android:id="@+id/goodsListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null" /> -->

                <LinearLayout
            android:id="@+id/addViewID"
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/cart_listview_gap" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:orientation="horizontal" >

            <TextView
             android:id="@+id/textOrderGoodsNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="共？件商品，合计"
                android:textColor="#959595"
                android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/textOrderAllPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="￥0.0"
                        android:textColor="#CC1212"
                        android:textSize="16dp" />

                <TextView
                    android:id="@+id/textOrderShippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="(含运费￥0.0)"
                    android:textColor="#959595"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/cart_listview_gap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textOrderDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/nc_icon_del"
                    android:text="  移除"
                    android:visibility="gone"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/textTui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="退款/退货中"
                    android:textColor="#CC1212"
                    android:textSize="12dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/textOrderOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_cancle"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:text="取消订单"
                    android:textColor="#7F7F7F"
                    android:textSize="14dp"
                    android:visibility="gone"
                     />

                <Button
                    android:id="@+id/buttonQueRen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_sure"
                    android:padding="4dp"
                    android:text="确认收货"
                    android:textColor="#CC1212"
                    android:textSize="14dp"
                    android:visibility="gone"
                     />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/cart_listview_gap" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>