<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 整个应用的基本主题 -->
    <style name="MyTheme.Basic" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- tab栏上的按钮样式 -->
    <style name="MyTabButton">
        <item name="android:textSize">13.0dp</item>
        <item name="android:textColor">@color/main_index_textcolor_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0.00000075dip</item>
        <item name="android:layout_marginRight">0.00000000dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:drawablePadding">3.0dip</item>
    </style>

    <!-- tab栏上的按钮样式 -->
    <!--   <item name="android:background">@drawable/goods_tab_btn_bg</item> -->
    <style name="GoodsTabButton">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/main_index_textcolor_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0.00000075dip</item>
        <item name="android:layout_marginRight">0.00000000dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

    <style name="PopupVoucherAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popw_voucher_in</item>
        <item name="android:windowExitAnimation">@anim/popw_voucher_in</item>
    </style>

    <!-- 背景透明主题 -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 加载数据时的等待对话框(透明背景色) -->
    <style name="MyProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/touming_color</item>
        <item name="android:windowFrame">@color/touming_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 标题栏文字 -->
    <style name="NCTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nc_black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 分隔线 -->
    <style name="NCLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/nc_border</item>
    </style>
    <!-- 表单文本 -->
    <style name="NCText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/nc_text</item>
    </style>

    <!-- 表单文本 -->
    <style name="NCFormText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/nc_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- 表单输入框 -->
    <style name="NCFormEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/nc_bg_border_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#CECECE</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- 表单输入框无下边框 -->
    <style name="NCFormEditNoBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/nc_text_hint</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!-- 图标按钮 -->
    <style name="NCImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 文字型按钮 -->
    <style name="NCTextButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/nc_btn_bg</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!-- 文字型按钮(自定义宽度颜色) -->
    <style name="NCTextButtonSmall">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12dp</item>
    </style>
    <!-- 圆角按钮 -->
    <style name="NCCornerButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/nc_btn_corner_bg</item>
        <item name="android:textColor">@drawable/nc_btn_text_color</item>
        <item name="android:textSize">16dp</item>
    </style>
    <!-- 小圆角按钮 -->
    <style name="NCCornerButtonSmall">
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/nc_btn_corner_bg</item>
        <item name="android:textColor">@drawable/nc_btn_text_color</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NCCornerButtonMain">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/nc_btn_bg_on</item>
        <item name="android:textColor">@color/nc_white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NCCornerButtonNormal">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/nc_btn_bg_normal</item>
        <item name="android:textColor">@color/nc_text</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!-- 选择型按钮 -->
    <style name="NCSelectButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/nc_select_btn_bg</item>
        <item name="android:textColor">@drawable/nc_btn_text_color</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- 选择型按钮2 非选中状态有边框 -->
    <style name="NCSelectButton2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/nc_select_btn_bg2</item>
        <item name="android:textColor">@drawable/nc_btn_text_color</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- 边框型按钮 -->
    <style name="NCBorderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/nc_border_btn_bg</item>
        <item name="android:textColor">@color/nc_text</item>
        <item name="android:textSize">14dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- Tab按钮 -->
    <style name="NCTabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/nc_tab_button_bg</item>
        <item name="android:textColor">@drawable/nc_tab_button_text_color</item>
    </style>
    <!-- 我的按钮LinearLayout -->
    <style name="NCMineButtonLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 我的按钮ImageView -->
    <style name="NCMineButtonImageView">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- 我的按钮ImageView -->
    <style name="NCMineButtonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/nc_text</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!--星级评价按钮-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <!-- 常规Dialog样式，悬浮、背景透明 -->
    <style name="CommonDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--文字提示-->
    <style name="TextViewHint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/nc_tv_hint</item>
        <item name="android:textColor">@color/nc_white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--评价文本输入框-->
    <style name="NcEditText">
        <item name="android:background">@drawable/nc_text</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

  <!--等待loading对话框-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>